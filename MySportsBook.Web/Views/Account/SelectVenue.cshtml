
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <base href="./../">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="CoreUI - Open Source Bootstrap Admin Template">
    <meta name="author" content="Łukasz Holeczek">
    <meta name="keyword" content="Bootstrap,Admin,Template,Open,Source,jQuery,CSS,HTML,RWD,Dashboard">
    <title>Select Venue</title>
    <!-- Icons-->
    <link href="/Content/coreui-icons.min.css" rel="stylesheet">
    <link href="/Content/flag-icon.min.css" rel="stylesheet">
    <link href="/Content/font-awesome.min.css" rel="stylesheet">
    <link href="/Content/simple-line-icons.css" rel="stylesheet">
    <!-- Main styles for this application-->
    <link href="/Content/style.css" rel="stylesheet">
    <link href="/Content/pace.min.css" rel="stylesheet">
    <script src="/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
    <div class="app-body">
        <div class="sk-wave">
            <div class="sk-rect sk-rect1"></div>
            <div class="sk-rect sk-rect2"></div>
            <div class="sk-rect sk-rect3"></div>
            <div class="sk-rect sk-rect4"></div>
            <div class="sk-rect sk-rect5"></div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="venueModal" tabindex="-1" role="dialog" aria-labelledby="venueModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="venueModalLabel">Select Venue</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="app-footer">
        <div>
            <span>&copy; 2018 MySportsBook.com</span>
        </div>
    </footer>
    <!-- CoreUI and necessary plugins-->

    <script src="/Scripts/popper.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/pace.min.js"></script>
    <script src="/Scripts/perfect-scrollbar.min.js"></script>
    <script src="/Scripts/coreui.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $.ajax({
                type: "GET",
                url: "/Account/GetVenueList",
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (response) {
                    $('.modal-body').html(response);
                    $('#venueModal').modal('show');

                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });

        });
        $("#venueModal").on("hidden.bs.modal", function () {
            window.location.href = '@Url.Action("Login", "Account")';
        });
    </script>
</body>
</html>