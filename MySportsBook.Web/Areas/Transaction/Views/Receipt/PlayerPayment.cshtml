@model IEnumerable<MySportsBook.Web.Areas.Transaction.Models.PlayerReceiptViewModel>

@{
    var Finyr = "";
    var IsShowTable = "";
    if (Model.Count() > 0)
    { Finyr = Model.ToList().FirstOrDefault().Years ?? ""; }
    else
    {
        IsShowTable = "hidden";
    }

    if (ViewContext.ViewBag.IsAdmin != null && ViewContext.ViewBag.IsAdmin) { Layout = "/Views/Shared/Layout/_AdminLayout.cshtml"; } else { Layout = "/Views/Shared/Layout/_Layout.cshtml"; }
}
<style>
    th, td {
        white-space: nowrap;
    }

    table.DTFC_Cloned thead,
    table.DTFC_Cloned tfoot {
        background-color: white;
    }

    div.DTFC_Blocker {
        background-color: white;
    }

    div.DTFC_LeftWrapper table.dataTable,
    div.DTFC_RightWrapper table.dataTable {
        margin-bottom: 0;
        z-index: 2;
    }

        div.DTFC_LeftWrapper table.dataTable.no-footer,
        div.DTFC_RightWrapper table.dataTable.no-footer {
            border-bottom: none;
        }
</style>

<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item">@Html.ActionLink("Receipt", "")</li>
        <li class="breadcrumb-item active">Player Payments</li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i>
                    <strong>Player Payment</strong>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row" style="margin-bottom:10px;">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.Label("Year")
                                    <div class="input-group">
                                        @Html.TextBox("year", "", new { @class = "form-control year", @autocomplete = "off" })
                                        <span class="input-group-append">
                                            <button class="btn btn-primary" type="submit">Search<i class="fa fa-search" style="margin-left: 5px;"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="" @IsShowTable>
                        <table class="table table-striped table-bordered table-responsive-sm table-hover table-outline mb-0" style="width:100%">
                            <thead class="thead-light">
                                <tr>
                                    <th>@Finyr</th>
                                    <th>Mobile</th>
                                    <th>Batch</th>
                                    <th>Jan </th>
                                    <th>Feb</th>
                                    <th>Mar</th>
                                    <th>Apr </th>
                                    <th>May</th>
                                    <th>Jun</th>
                                    <th>Jul </th>
                                    <th>Aug</th>
                                    <th>Sep</th>
                                    <th>Oct</th>
                                    <th>Nov</th>
                                    <th>Dec</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var Users = Model.Select(u => new { u.PK_PlayerId, u.FirstName, u.LastName, u.Mobile, u.Batch }).Distinct();
                                    foreach (var user in Users)
                                    {
                                        var transaction = Model.Where(u => u.PK_PlayerId == user.PK_PlayerId).OrderBy(x => x.YearMonth);

                                        <tr>
                                            <td>@user.FirstName @user.LastName</td>
                                            <td>@user.Mobile</td>
                                            <td>@user.Batch</td>
                                            @foreach (var item in transaction)
                                            {
                                                <td>
                                                    @item.AmountPaid
                                                </td>
                                            }

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script src="~/Scripts/dataTables.fixedColumns.min.js"></script>
<script>
    $(function () {
        $('.table').DataTable({
            dom: 'Bfrtip',
            scrollX: true,
            buttons: [
                'csv', 'excel', 'pdf'
            ],
            //fixedColumns: {
            //    leftColumns: 3
            //},
        });
    });
</script>
