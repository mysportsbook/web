@model MySportsBook.Model.ViewModel.Transaction_Details

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";
}



<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item active">Reports</li>
    </ol>
    <div class="container-fluid">
        <div id="ui-view">
            <div>

                <div class="animated fadeIn">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-5">
                                    <h4 class="card-title mb-0">Transactions</h4>
                                    <div class="small text-muted"></div>
                                </div>
                                <div class="col-sm-7 d-none d-md-block">
                                    <form method="post">
                                        <div class="row">
                                            <div class="col-sm-5 col-md-5">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-group">
                                                        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control date" } })
                                                        <div class="input-group-append">
                                                            <span class="input-group-text">
                                                                <i class="fa fa-calendar"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-md-5">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-group">
                                                        @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control date" } })
                                                        <div class="input-group-append">
                                                            <span class="input-group-text">
                                                                <i class="fa fa-calendar"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-2 col-md-2">
                                                <div class="form-group">
                                                    @Html.Label("")
                                                    <button class="btn btn-primary float-right" type="submit">
                                                        <i class="icon-eye"></i>
                                                    </button>

                                                </div>
                                            </div>
                                        </div>
                                    </form>


                                </div>
                            </div>
                            <div class="chart-wrapper" style="height:300px;margin-top:40px;">
                                <table class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Customer Name")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Description")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Transaction Type")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Responsible Person")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Date")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Amount")
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.TransactionList != null)
                                        {
                                            foreach (var item in Model.TransactionList)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CustomerName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Description)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TransactionType)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SpendBy)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Amount)
                                                    </td>

                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        @if (Model.TransactionList != null)
                        {
                            <div class="card-footer">
                                <div class="row text-center">
                                    <div class="col-sm-12 col-md mb-sm-2 mb-0">
                                        <div class="text-muted">Total Income</div>
                                        <strong>@Model.TotalIncome</strong>
                                        <div class="progress progress-xs mt-2">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>

                                    <div class="col-sm-12 col-md mb-sm-2 mb-0">
                                        <div class="text-muted">Total Expenses</div>
                                        <strong>@Model.TotalExpanses</strong>
                                        <div class="progress progress-xs mt-2">
                                            <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>
</main>
@Html.Partial("~/Views/Shared/Script/_DateTimePicker.cshtml")
