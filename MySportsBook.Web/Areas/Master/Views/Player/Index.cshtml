                                            if (!string.IsNullOrEmpty(item.ProfileImg))
                                            {
                                                imgSrc = String.Format("data:image/gif;base64,{0}", item.ProfileImg);
                                                <img class="img-avatar" src="@imgSrc" width="50px" height="50px">
                                            }


                                            @*@Html.DisplayFor(modelItem => item.FirstName)*@
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mobile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SportName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Batches)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fees)
                                    </td>
                                    <td>

                                        @if (item.FK_StatusId == 1)
                                        {
                                            <label class="switch">  <input type="checkbox" id="Player_@item.PK_PlayerId" onchange="StatusChangeData(@item.PK_PlayerId)" checked>  <span class="slider round"></span></label>
                                        }
                                        else
                                        {
                                            <label class="switch">  <input type="checkbox" id="Player_@item.PK_PlayerId" onchange="StatusChangeData(@item.PK_PlayerId)">  <span class="slider round"></span></label>
                                        }

                                    </td>
                                    <td>
                                        <div>
                                            <button class="btn btn-primary" onclick="editData(@item.PK_PlayerId)" title="Edit" type="button">
