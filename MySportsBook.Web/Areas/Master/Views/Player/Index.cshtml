@model IEnumerable<MySportsBook.Model.ViewModel.PlayerModel>

@{
    ViewBag.Title = "Index";
    if (ViewContext.ViewBag.IsAdmin != null && ViewContext.ViewBag.IsAdmin) { Layout = "/Views/Shared/Layout/_AdminLayout.cshtml"; } else { Layout = "/Views/Shared/Layout/_Layout.cshtml"; }
}

<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item">@Html.ActionLink("Player", "")</li>
        <li class="breadcrumb-item active">View</li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i>
                    <strong>Players</strong>
                    <i class="fa fa-plus float-right">  @Html.ActionLink("Create New", "Create")</i>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Player.FirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Player.LastName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Player.Mobile)
                                </th>
                                <th>
                                    @Html.DisplayName("Sport")
                                </th>
                                <th>
                                    @Html.DisplayName("Batch")
                                </th>
                                <th>
                                    @Html.DisplayName("Fees")
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Player.Configuration_Status.Status)
                                </th>
                                <th width="65px">@Html.DisplayName("Action")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Player.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Player.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Player.Mobile)
                                    </td>
                                    <td>
                                        @{
                                            string _sports = item.PlayerSports.Count > 0 ? string.Join(", ", item.PlayerSports.Select(i => i.Master_Sport.SportName)) : string.Empty;
                                        }
                                        @Html.DisplayFor(modelItem => _sports)
                                    </td>
                                    <td>
                                        @{
                                            string _batches = item.PlayerSports.Count > 0 ? string.Join(", ", item.PlayerSports.Select(i => i.Master_Batch.BatchName)) : string.Empty;
                                        }
                                        @Html.DisplayFor(modelItem => _batches)
                                    </td>
                                    <td>
                                        @{
                                            string _Fees = item.PlayerSports.Count > 0 ? String.Format("{0:0.00}", item.PlayerSports.Sum(i => i.Fee)) : string.Empty;
                                        }
                                        @Html.DisplayFor(modelItem => _Fees)
                                    </td>
                                    <td>
                                        @if (item.Player.FK_StatusId == 1)
                                        {
                                            <span class="badge badge-success"> @Html.DisplayFor(modelItem => item.Player.Configuration_Status.Status)</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger"> @Html.DisplayFor(modelItem => item.Player.Configuration_Status.Status)</span>
                                        }

                                    </td>
                                    <td>
                                        <div>
                                            <button class="btn btn-primary" onclick="editData(@item.Player.PK_PlayerId)" title="Edit" type="button">
                                                <i class="fa fa-pencil"></i>
                                            </button>
                                            <button class="btn btn-danger" onclick="deleteData(@item.Player.PK_PlayerId)" title="Delete" type="button">
                                                <i class="fa fa-trash-o"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
@Html.Partial("/Views/Shared/Script/_EditDelete.cshtml")
