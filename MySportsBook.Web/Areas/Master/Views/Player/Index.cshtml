                                <th>
                                    @Html.DisplayName("Name")
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mobile)
                                </th>
                                <th>
                                    @Html.DisplayName("Sport")
                                </th>
                                <th>
                                    @Html.DisplayName("Batch")
                                </th>
                                <th>
