@model IEnumerable<MySportsBook.Model.ViewModel.InvoiceReportModel>

@{
    ViewBag.Title = "Invoice";
    if (ViewContext.ViewBag.IsAdmin != null && ViewContext.ViewBag.IsAdmin) { Layout = "/Views/Shared/Layout/_AdminLayout.cshtml"; } else { Layout = "/Views/Shared/Layout/_Layout.cshtml"; }
}

<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item">@Html.ActionLink("Invoice", "")</li>
        <li class="breadcrumb-item active">Invoice Report</li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i>
                    <strong>Payment Report</strong>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-sm-2">
                                <div class="form-group">
                                    @Html.Label("Start Date")
                                    @Html.Editor("StartDate", new { htmlAttributes = new { @class = "form-control date" } })
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    @Html.Label("End Date")
                                    @Html.Editor("EndDate", new { htmlAttributes = new { @class = "form-control date" } })
                                </div>
                            </div>

                            <div class="col-sm-1">
                                <div class="form-group">
                                    @Html.Label("Status")


                                </div>
                            </div>
                            <div class="col-sm-1">
                                <div class="form-group">
                                    @Html.Label("Collected", htmlAttributes: new { @class = "control-label" })
                                    <div class="col-md-5">
                                        <div class="checkbox">
                                            @Html.CheckBox("Collected")
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-1">
                                <div class="form-group">
                                    @Html.Label("Pending", htmlAttributes: new { @class = "control-label" })
                                    <div class="col-md-5">
                                        <div class="checkbox">
                                            @Html.CheckBox("Pending")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    @Html.Label(" ", htmlAttributes: new { @class = "control-label" })
                                    <input type="submit" value="Find" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i>
                    <strong>Payment Report</strong>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered table-responsive-sm table-hover table-outline mb-0" style="width:100%">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    @Html.DisplayName("Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Batch")
                                </th>
                                <th>
                                    @Html.DisplayName("Mobile")
                                </th>
                                <th>
                                    @Html.DisplayName("Month")
                                </th>
                                <th>
                                    @Html.DisplayName("Amount")
                                </th>
                                <th>
                                    @Html.DisplayName("Status")
                                </th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Batch)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mobile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Month)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Amount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

@Html.Partial("~/Views/Shared/Script/_DateTimePicker.cshtml")


<script type="text/javascript">
    $(function () {
        $('.table').DataTable();
    });
</script>