<script type="text/javascript">
    function loader(show) {
        if (show == undefined) {
            if ($('#overlay').is(':visible'))
                $('#overlay').hide();
            else
                $('#overlay').show();
        }
        else {
            if (!show)
                $('#overlay').hide();
            else
                $('#overlay').show();
        }
    }
</script>
