@model IEnumerable<MySportsBook.Model.Master_Batch>


@{
    ViewBag.Title = "Index";
    if (ViewContext.ViewBag.IsAdmin != null && ViewContext.ViewBag.IsAdmin)
    {
        Layout = "/Views/Shared/Layout/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "/Views/Shared/Layout/_Layout.cshtml";
    }
}
@Html.Partial("/Views/Shared/Script/_EditDelete.cshtml")
<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item">@Html.ActionLink("Batch", "")</li>
        <li class="breadcrumb-item active">View</li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i>
                    <strong>Batches</strong>
                    <i class="fa fa-plus float-right">  @Html.ActionLink("Create New", "Create")</i>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered table-responsive-sm table-hover table-outline mb-0" style="width:100%">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.BatchName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BatchCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Master_Court.Master_Sport.SportName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Master_Court.CourtName)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.StartTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EndTime)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Fee)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Configuration_Status.Status)
                                </th>

                                <th width="65px">@Html.DisplayName("Action")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BatchName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BatchCode)
                                    </td>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.Master_Court.Master_Sport.SportName)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.Master_Court.CourtName)
                                    </th>
                                    @*<td>
                                        @{
                                            string _startTime = item.StartTime.ToString().Substring(0, 5);
                                        }
                                        @Html.DisplayFor(modelItem => _startTime)
                                    </td>
                                    <td>
                                        @{
                                            string _endTime = item.EndTime.ToString().Substring(0, 5);
                                        }
                                        @Html.DisplayFor(modelItem => _endTime)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fee)
                                    </td>
                                    <td>
                                        @if (item.FK_StatusId == 1)
                                        {
                                            <span class="badge badge-success"> @Html.DisplayFor(modelItem => item.Configuration_Status.Status)</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger"> @Html.DisplayFor(modelItem => item.Configuration_Status.Status)</span>
                                        }

                                    </td>
                                    <td>
                                        <div>
                                            <button class="btn btn-primary" onclick="editData(@item.PK_BatchId)" title="Edit" type="button">
                                                <i class="fa fa-pencil"></i>
                                            </button>
                                            <button class="btn btn-danger" onclick="deleteData(@item.PK_BatchId)" title="Delete" type="button">
                                                <i class="fa fa-trash-o"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
