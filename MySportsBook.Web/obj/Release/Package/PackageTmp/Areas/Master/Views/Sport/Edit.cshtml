@model MySportsBook.Model.Master_Sport

@{
    ViewBag.Title = "Edit";
    if (ViewContext.ViewBag.IsAdmin != null && ViewContext.ViewBag.IsAdmin)    {        Layout = "/Views/Shared/Layout/_AdminLayout.cshtml";    }    else    {        Layout = "/Views/Shared/Layout/_Layout.cshtml";    }
}

<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item">@Html.ActionLink("Sport", "")</li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-sm-8">
                                        <strong>Edit</strong>
                                    </div>
                                    <div class="col-sm-4">
                                        <i class="fa fa-list-alt float-right"> @Html.ActionLink("Back to List", "")</i>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.PK_SportId)
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.SportName, htmlAttributes: new { @class = "control-label col-md-12" })
                                            @Html.EditorFor(model => model.SportName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SportName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.SportCode, htmlAttributes: new { @class = "control-label col-md-12" })
                                            @Html.EditorFor(model => model.SportCode, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SportCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Fee, htmlAttributes: new { @class = "control-label col-md-12" })
                                            @Html.EditorFor(model => model.Fee, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Fee, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AllowCoaching, htmlAttributes: new { @class = "control-label col-md-12" })
                                            @Html.CheckBoxFor(model => model.AllowCoaching, new { @class = "form-check-input" })
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="card-footer">
                                @Html.Partial("~/Views/Shared/Button/_SaveButton.cshtml")
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>
<script>
    function save() {
        var sportmodel = {
            "PK_SportId": $('input[name="PK_SportId"]').val(),
            "SportName": $('input[name="SportName"]').val(),
            "SportCode": $('input[name="SportCode"]').val(),
            "Fee": $('input[name="Fee"]').val(),
            "AllowCoaching": $('input[name="AllowCoaching"]').is(":checked")
        }
        saveData(sportmodel, $('input[name="SportName"]').val(), SaveOrUpdate.update);
    }

</script>
